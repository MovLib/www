<phpunit
  bootstrap="../bootstrap.php"
  colors="false"
  convertErrorsToExceptions="true"
  convertNoticesToExceptions="true"
  convertWarningsToExceptions="true"
  stopOnFailure="true"
>
  <php>
    <const name="MOVLIB_PHPUNIT" value="true" />
  </php>
  <testsuites>
    <testsuite name="all">
      <directory>./MovLib/Tests</directory>
    </testsuite>
    <testsuite name="models">
      <directory>./MovLib/Tests/Model/</directory>
    </testsuite>
    <testsuite name="presenters">
      <directory>./MovLib/Tests/Presenter/</directory>
    </testsuite>
    <testsuite name="utilies">
      <directory>./MovLib/Tests/Utility</directory>
    </testsuite>
    <testsuite name="htmlviews">
      <directory>./MovLib/Tests/View/HTML</directory>
    </testsuite>
  </testsuites>
</phpunit>
