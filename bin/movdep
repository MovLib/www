/** Install path */
define('IP', dirname(__DIR__));

/** Require composer autoloader. */
require IP . DIRECTORY_SEPARATOR . 'vendor' . DIRECTORY_SEPARATOR . 'autoload.php';

// Initialize application
(new \MovLib\Console\Application\MovDep())->run();
